{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI-BOM Inspector Policy",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "min_score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "max_cves": { "type": "integer", "minimum": 0 },
    "disallow": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of issue codes that should fail policy enforcement"
    },
    "blocklist": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Alias for disallow; kept for backward compatibility"
    },
    "min_trust_score": { "type": "integer", "minimum": 0, "maximum": 100 },
    "publisher_expectations": {
      "type": "object",
      "description": "Expected publisher or source string for specific dependencies",
      "additionalProperties": { "type": "string" }
    },
    "exceptions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["code", "subject"],
        "properties": {
          "code": { "type": "string" },
          "subject": { "type": "string" },
          "reason": { "type": "string" },
          "approved_by": { "type": ["string", "null"] },
          "expires": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "ISO-8601 expiration timestamp"
          }
        }
      }
    }
  }
}
